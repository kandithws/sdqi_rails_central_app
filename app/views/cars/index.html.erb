<p id="notice"><%= notice %></p>

<% if @cars.count == 0 %>

  <div class="alert alert-warning">
    <p> You have no car registered to the system !</p>
  </div>
<% else %>
<h1>Cars</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">License plate number</th>
      <th scope="col">Brand</th>
      <th scope="col">Model name</th>
      <th scope="col">Model year</th>
      <th scope="col">Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>




  <tbody>
    <% i = 1 %>
    <% @cars.each do |car| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= car.license_plate_number %></td>
        <td><%= car.brand %></td>
        <td><%= car.car_model_name %></td>
        <td><%= car.car_model_year %></td>
        <td><%= car.color %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% i += 1 %>
    <% end %>
  </tbody>

</table>
<% end %>


<br>

<%= link_to 'Add Car', new_car_path, class: 'btn btn-info' %>
