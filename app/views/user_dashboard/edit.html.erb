<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this new information from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div id="signupbox" style="margin-top:50px" class="mainbox col-md-10 col-md-offset-2 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">EDIT your profile </div>
      <div style="float:right; font-size: 85%; position: relative; top:-10px">
      </div>
    </div>
    <div class="panel-body">
      <%= form_for @user, url: user_dashboard_update_path(@user) do |f| %>

        <div class="form-group">
          <%= f.label :name_prefix %>
          <!-- Note to add class to input filed
          f.select :name_prefix, ['Mr.', 'Ms.', 'Mrs.'], {}, {class: 'todo'}
          -->
          <%= f.select :name_prefix, ['Mr.', 'Ms.', 'Mrs.'] %>
        </div>

        <div class="form-group">
          <%= f.label :firstname %>

          <%= f.text_field :firstname, placeholder: "Your first name" %>

        </div>

        <div class="form-group">
          <%= f.label :lastname %>

          <%= f.text_field :lastname, placeholder: "Your last name" %>

        </div>

        <div class="form-group">
          <%= f.label :address %>

          <%= f.text_field :address, placeholder: "Your Address..." %>

        </div>

        <div class="form-group">
          <%= f.label :phone_number %>

          <%= f.text_field :phone_number, placeholder: "+66 .." %>
        </div>

        <div class="form-group">
          <%= f.submit "Edit User details", class: 'btn btn-info' %>
        </div>

      <% end %>
    </div>

  </div>

</div>
