<div class="col-md-10 col-md-offset-1">

  <div class="panel panel-default panel-table">
    <div class="panel-heading">
      <div class="row">
        <div class="col col-xs-6">
          <h3 class="panel-title">Unconfimed Bills for manual slip upload</h3>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <% if @bills.count > 0 %>
      <table class="table table-striped table-bordered table-list">
        <thead>
        <tr>
          <th class="hidden-xs">#</th>
          <th>Bill ID</th>
          <th>User ID</th>
          <th>Issued Date</th>
          <th>Deadline</th>
          <th>View Details</th>
        </tr>
        </thead>
        <tbody>
        <% i = 1 %>
        <% @bills.each do |b| %>
          <%= render 'bills/unconfirmed_row', bill: b, order: i %>
          <% i = i + 1 %>
        <% end %>
        </tbody>
      </table>

      <% else %>
        <p> All user Attachment are already confirmed</p>
      <% end %>

    </div>
