<div class="row justify-content-center">
  <div class="col-md-10 col-md-offset-1">
    <div class="card">
      <div class="card-header" style="text-align: center;">
        <h3 class="card-title">Unconfimed Bills for manual slip upload</h3>
      </div>

      <div class="card-body">
        <% if @bills.count > 0 %>
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="hidden-xs">#</th>
              <th>Bill ID</th>
              <th>User ID</th>
              <th>Issued Date</th>
              <th>Deadline</th>
              <th>View Details</th>
            </tr>
            </thead>
            <tbody>
            <% i = 1 %>
            <% @bills.each do |b| %>
              <%= render 'bills/unconfirmed_row', bill: b, order: i %>
              <% i = i + 1 %>
            <% end %>
            </tbody>
          </table>

        <% else %>
          <p> All user Attachment are already confirmed</p>
        <% end %>

      </div>
    </div>
  </div>
</div>