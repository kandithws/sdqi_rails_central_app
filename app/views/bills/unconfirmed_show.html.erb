<div class="row form-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Bill Details: Ref ID <%= @bill.id %></h3>
    </div>
    <div class="panel-body">
      <h3> Attachment </h3>
      <% if @bill.payment_evidence.exists? %>

        <div class="col-lg-9 col-lg-offset-2">
          <%= image_tag @bill.payment_evidence.url, class: "img-responsive" %>
          <div class="caption">
            <p>Uploaded at <%= @bill.payment_evidence_updated_at %> </p>
          </div>
        </div>

      <% end %>
      <table class="table">
        <tbody>
        <tr>
          <td>Total Amount:</td>
          <td><%= @bill.total_amount %></td>
        </tr>
        <tr>
          <td>Payment Deadline:</td>
          <td> <%= @bill.payment_deadline %> </td>
        </tr>
        <tr>
          <td>Current payment method:</td>
          <% if @bill.payment_method.nil? %>
            <td> Not Selected</td>
          <% else %>
            <td> <%= @bill.payment_method %> </td>
          <% end %>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="panel-footer text-center">
      <%= link_to unconfirmed_bill_update_path(@bill.id, is_confirmed: true), method: :post, class: "btn btn-success" do %>
        <em class="glyphicon glyphicon-ok"></em> Accept Payment
      <% end %>
      <%= link_to unconfirmed_bill_path(@bill.id), method: :post, class: "btn btn-danger" do %>
        <em class="glyphicon glyphicon-remove"></em> Reject Payment
      <% end %>
    </div>
  </div>
</div>
