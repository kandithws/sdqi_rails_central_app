<div class="row justify-content-center">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="card">
      <div class="card-header" style="text-align: center;">
        <h3 class="card-title">Bill Details: Reference ID <%= @bill.id %></h3>
      </div>
      <div class="card-body" style="text-align: center;">
        <% if @bill.payment_evidence.exists? %>
          <%= image_tag @bill.payment_evidence.url, class: "card-img-top" %>
          <p>Uploaded at <%= @bill.payment_evidence_updated_at %> </p>
        <% end %>
        <table class="table">
          <tbody>
          <tr>
            <td>Total Amount:</td>
            <td><%= @bill.total_amount %></td>
          </tr>
          <tr>
            <td>Payment Deadline:</td>
            <td> <%= @bill.payment_deadline %> </td>
          </tr>
          <tr>
            <td>Current payment method:</td>
            <% if @bill.payment_method.nil? %>
              <td> Not Selected</td>
            <% else %>
              <td> <%= @bill.payment_method %> </td>
            <% end %>
          </tr>
          </tbody>
        </table>
      </div>
      <div class="card-footer text-center">
        <%= link_to unconfirmed_bill_update_path(@bill.id, is_confirmed: true), method: :post, class: "btn btn-success" do %>
          <em class="fa fa-check"></em> Accept Payment
        <% end %>
        <%= link_to unconfirmed_bill_path(@bill.id), method: :post, class: "btn btn-danger" do %>
          <em class="fa fa-times"></em> Reject Payment
        <% end %>
      </div>
    </div>
  </div>
</div>
