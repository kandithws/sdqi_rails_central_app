  <div class="card bg-light">
    <div class="card-header">
      <div class="row">
        <div class="col col-lg-6">
          <h3 class="panel-title">Your Bills</h3>
        </div>
      </div>
    </div>
    <div class="card-body">
      <table class="table table-striped table-bordered table-list">
        <thead>
        <tr>
          <th>#</th>
          <th>Issued Date</th>
          <th>Payment Deadline</th>
          <th>Total amount</th>
          <th>Is Paid</th>
          <th>View Details</th>
        </tr>
        </thead>
        <tbody>
        <% i = 1 %>
        <% bills.each do |b| %>
          <%= render 'bills/row', bill: b, order: i %>
          <% i = i + 1 %>
        <% end %>
        </tbody>
      </table>

    </div>
