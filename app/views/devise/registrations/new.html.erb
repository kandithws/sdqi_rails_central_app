<h2>Sign up</h2>
<div class="row justify-content-center">
  <div id="signupbox" style="margin-top:50px" class="mainbox col-md-10 col-md-offset-2 col-sm-8 col-sm-offset-2">
    <div class="card card-info">
      <div class="card-header">
        <div class="card-title">Sign Up</div>
        <div style="float:right; font-size: 85%; position: relative; top:-10px">
        </div>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label "Email*", class: "col-md-4 control-label" %>

            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

          </div>

          <div class="form-group">
            <%= f.label "Password*", class: "col-md-4 control-label" %>
            <%= f.password_field :password, autocomplete: "off" %>
            <% if @minimum_password_length %>
              <small id="license_plate_number_help" class="form-text text-muted">
                (<%= @minimum_password_length %> characters minimum)
              </small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.label :name_prefix, class: "col-md-4 control-label" %>
            <!-- Note to add class to input filed
            f.select :name_prefix, ['Mr.', 'Ms.', 'Mrs.'], {}, {class: 'todo'}
            -->
            <%= f.select :name_prefix, ['Mr.', 'Ms.', 'Mrs.'] %>
          </div>

          <div class="form-group">
            <%= f.label "First Name*", class: "col-md-4 control-label" %>

            <%= f.text_field :firstname, placeholder: "Your first name" %>

          </div>

          <div class="form-group">
            <%= f.label "Last Name*", class: "col-md-4 control-label" %>

            <%= f.text_field :lastname, placeholder: "Your last name" %>

          </div>

          <div class="form-group">
            <%= f.label :address, class: "col-md-4 control-label" %>

            <%= f.text_field :address, placeholder: "Your Address..." %>

          </div>

          <div class="form-group">
            <%= f.label "Phone Number*", class: "col-md-4 control-label" %>

            <%= f.text_field :phone_number, placeholder: "+66 .." %>

          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: 'btn btn-info' %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
