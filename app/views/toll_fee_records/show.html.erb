<div class="container" style="margin-top:10px;">
  <div class="row form-group">
    <div class="col-xs-12 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Toll Fee Record Details: Ref ID <%= @toll_fee_record.id %></h3>
        </div>
        <div class="panel-image hide-panel-body">
          <%= image_tag @toll_fee_record.image.url(:medium) %>
        </div>
        <div class="panel-body">
          <table class="table">
            <tbody>
            <tr>
              <td>Passing Date:</td>
              <td><%= @toll_fee_record.timestamp %></td>
            </tr>
            <tr>
              <td>Toll Gate:</td>
              <td> @toll_fee_record.toll_booth.name </td>
            </tr>
            <tr>
              <td>Toll Fee:</td>
              <td> @toll_fee_record.toll_booth.toll_fee </td>
            </tr>

            <tr>
            <tr>
              <td>Car:</td>
              <td> <%= link_to @toll_fee_record.car.license_plate_number, car_path(@toll_fee_record.car) %> </td>
            </tr>
            <tr>
              <td>Issued Bill: </td>
              <td>
                <% if @toll_fee_record.bill.nil? %>
                  None
                <% else %>
                  <%= @toll_fee_record.bill.id %>
                <% end %>
              </td>
            </tr>

            </tbody>
          </table>
        </div>
        <div class="panel-footer text-center">
        </div>
      </div>
    </div>
  </div>

</div>